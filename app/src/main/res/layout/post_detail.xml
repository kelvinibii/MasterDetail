<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/post_detail"
    style="?android:attr/textAppearanceLarge"
    tools:context="com.example.kelvindu.masterdetail.view.post_detail_fragment.PostDetailFragment" >

    <TextView
        android:id="@+id/fragment_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="26sp"
        android:text="loren ipsum"
        android:textIsSelectable="true" />

    <TextView
        android:layout_below="@id/fragment_detail_title"
        android:id="@+id/fragment_detail_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="5"
        android:padding="16dp" />

    <Button
        android:layout_below="@id/fragment_detail_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Start Now!"
        android:id="@+id/fragment_detail_button" />

</RelativeLayout>


